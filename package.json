{
  "name": "rivet",
  "version": "0.0.0",
  "extension": {
    "name": "Rivet",
    "description": "Developer Wallet & DevTools for Ethereum"
  },
  "scripts": {
    "anvil": "anvil --fork-url https://cloudflare-eth.com",
    "build": "tsc && vite build && pnpm build:inpage",
    "build:ds": "vite build -c src/design-system/vite.config.ts",
    "build:inpage": "vite build -c vite.config.inpage.ts",
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development pnpm build:inpage && vite --open",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "pnpm lint --apply",
    "prepare": "pnpm build:ds",
    "symbols": "node -r esbuild-register scripts/generate-symbols.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.0.0",
    "@capsizecss/core": "^3.1.0",
    "@capsizecss/vanilla-extract": "^1.0.0",
    "@fastify/deepmerge": "^1.3.0",
    "@lukeed/uuid": "^2.0.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-form": "^0.0.3",
    "@radix-ui/react-polymorphic": "^0.0.14",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.6",
    "@samrum/vite-plugin-web-extension": "^4.1.0",
    "@tanstack/query-async-storage-persister": "5.0.0-alpha.42",
    "@tanstack/react-query": "5.0.0-alpha.42",
    "@tanstack/react-query-persist-client": "5.0.0-alpha.42",
    "@tanstack/react-virtual": "3.0.0-beta.54",
    "@types/chroma-js": "^2.4.0",
    "@types/chrome": "^0.0.244",
    "@types/d3-format": "^3.0.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "@types/opentype.js": "^1.3.4",
    "@types/prettier": "^2.7.2",
    "@types/qs": "^6.9.7",
    "@types/react": "^18.0.32",
    "@types/react-dom": "^18.0.11",
    "@types/use-sync-external-store": "^0.0.3",
    "@types/webextension-polyfill": "^0.10.0",
    "@vanilla-extract/css": "^1.11.0",
    "@vanilla-extract/css-utils": "^0.1.3",
    "@vanilla-extract/dynamic": "^2.0.3",
    "@vanilla-extract/sprinkles": "^1.6.0",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "@vitejs/plugin-react": "^4.0.0-beta.0",
    "chroma-js": "^2.4.2",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "d3-format": "^3.1.0",
    "esbuild": "^0.17.17",
    "esbuild-register": "^3.4.2",
    "eventemitter3": "^5.0.1",
    "fs-extra": "^11.1.1",
    "human-id": "^4.0.0",
    "mipd": "^0.0.5",
    "opentype.js": "^1.3.4",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-flatten-children": "^1.1.2",
    "react-hook-form": "^7.44.2",
    "react-intersection-observer": "^9.5.2",
    "react-router": "^6.10.0",
    "react-router-dom": "^6.10.0",
    "remeda": "^1.14.0",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "svg-path-commander": "^2.0.5",
    "typescript": "^5.0.4",
    "use-sync-external-store": "^1.2.0",
    "viem": "^1.9.2",
    "vite": "^4.3.0",
    "vite-plugin-crx-hot-reload": "^1.0.4",
    "vite-tsconfig-paths": "^4.2.0",
    "web-ext": "^7.6.1",
    "webextension-polyfill": "^0.10.0",
    "zustand": "^4.3.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "packageManager": "pnpm@8.3.1",
  "pnpm": {
    "patchedDependencies": {
      "@samrum/vite-plugin-web-extension@4.1.0": "patches/@samrum__vite-plugin-web-extension@4.1.0.patch"
    }
  }
}
